package com.raviraj.app.dao;

import java.util.ArrayList;
import java.util.List;

import org.springframework.jdbc.core.JdbcTemplate;
import org.springframework.stereotype.Repository;

import com.raviraj.app.model.Student;

@Repository
public class StudentDao {
   //find and inject object
	private final JdbcTemplate jdbcTemplate;
	
	//find and inject
	public StudentDao(JdbcTemplate jdbcTemplate) {
		this.jdbcTemplate = jdbcTemplate;
	}

	public void save(Student s) {
		String pst = "insert into Student(rollno, name, marks) values (?, ?, ?)";
		JdbcTemplate.update(pst, s.getRollno(), s.getName(), s.getMarks());
	}

	public List<Student> findAll(){
		List<Student> students = new ArrayList<>();
		String st = "Select * from Student"; 
		
		return students;
	}
}
