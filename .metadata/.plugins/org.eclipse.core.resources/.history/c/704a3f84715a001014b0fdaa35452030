package com.raviraj.app.service;

import java.util.Arrays;
import java.util.HashMap;
import java.util.List;
import java.util.Map;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.raviraj.app.dao.StudentDao;
import com.raviraj.app.model.Student;

@Service
public class StudentService {

	@Autowired
	private StudentDao dao;

	public void addStudent(Student s) {
		dao.save(s);
	}

	public List<Student> getStudent() {
		return dao.findAll();
	}
}

class FindSumPairs {
	int[] nums1;
	int[] nums2;
	Map<Integer, Integer> freq = new HashMap<>();

	// constructor
	public FindSumPairs(int[] nums1, int[] nums2) {
		// Sort Array num1 ASC
		Arrays.sort(nums1);
		this.nums1 = nums1; // Got Reference
		this.nums2 = nums2; // Got Reference

		// freq of 'e' in nums1[]
		for (int i = 0; i < nums1.length; i++) {
			if (!freq.containsKey(nums1[i])) {
				freq.put(nums1[i], 1);
			} else {
				// replace
				freq.put(nums1[i], freq.get(nums1[i]) + 1);
			}
		}
	}

	public void add(int index, int val) {
		// val add -> index in the nums2.
		nums2[index] += val;
	}

	public int count(int value) {
		// nums1[i] + nums2[j] == value
		int[] count = { 0 };

		// map freq of each to nums2[i]
		freq.entrySet().stream()
	    .filter(entry -> entry.getKey() < value)
	    .forEach(entry -> {
	        for (int i = 0; i < nums.length; i++) {
	            if (entry.getKey() + nums[i] == value) {
	                count[0] += entry.getValue();
	            }
	        }
	    });

		return count[0];
	}
}

/**
 * Your FindSumPairs object will be instantiated and called as such:
 * FindSumPairs obj = new FindSumPairs(nums1, nums2); obj.add(index,val); int
 * param_2 = obj.count(tot);
 */