package com.raviraj.app;

import org.springframework.context.ApplicationContext;
import org.springframework.context.support.ClassPathXmlApplicationContext;

public class Alien 
{
    public static void main( String[] args )
    {
       //If you want to make Project using Spring 
    	//just make the object of following first
    	 //Communicate spring using spring.xml
    	
    	System.out.println("Alien is Coding");
    	
    	ApplicationContext context = new ClassPathXmlApplicationContext("spring.xml");
    	
    	//beans
    	Computer obj = (Computer) context.getBean("Computer");
    	
    	Seller heyseller = (Seller) context.getBean("Seller"); 
    	
    	Desktop obj3 = heyseller.getHp();   //Setter Injected
    	obj3.Compile();
    	
    	System.out.println(heyseller.getPrice());  //If you set in xml otherwise give you a default 0 value  //count * Price
    	//Used Constructor injection and Setter Injection
    	
    	

    	
    	
        
    }
}
